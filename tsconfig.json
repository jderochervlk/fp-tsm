{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["DOM", "ESNext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noEmit": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "types": ["vitest/globals"],
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./node_modules"]
}
